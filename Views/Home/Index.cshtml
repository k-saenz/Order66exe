@{
    ViewData["Title"] = "Home Page";
}

<!-- Masthead-->
<header class="masthead" id="indexMasthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">Hello There!</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">Order_66.exe is a community of some pretty dumb people. Some more idiotic than others but pretty stupid in general. We do events sometimes if we can organize enough people, although we sometimes forget we made plans.</p>
                <a class="btn btn-primary btn-xl" href="#about">Find Out More</a>
            </div>
        </div>
    </div>
</header>

<!--TODO: Add carousel or similar element to showcase channels and other features of the server-->
<!-- About Section-->
<section class="page-section bg-primary" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Who are we?</h2>
                <hr class="divider divider-light" />
                <p class="text-white-75 mb-4">We are just some bozos who play Minecraft and share weird memes with each other. We have many roles within the server which mean nothing at all yet we show our pride by making fun of those who carry those roles.</p>
                <p class="text-white-75 mb-4"> Here, we believe everyone should be treated equally. In fact, we show equality to all by making fun of absolutely everyone, regardless of race, ethnicity, or other disabilities</p>
                <a class="btn btn-light btn-xl" href="https://discord.gg/wQkNWmr">Join Now!</a>
            </div>
        </div>
    </div>
</section>

