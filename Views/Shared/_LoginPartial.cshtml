@using Microsoft.AspNetCore.Identity
@using System.Security.Claims;
@inject SignInManager<DiscordUser> SignInManager
@inject UserManager<DiscordUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-0 mx-lg-1">
        <a class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @User.Claims.First(c => c.Type == ClaimTypes.Name).Value!</a>
    </li>
    <li class="nav-item mx-0 mx-lg-1">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
    <li class="nav-item mx-0 mx-lg-1">
        <a class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="" asp-controller="Home" asp-action="Events">Events</a>
    </li>
}
else
{
    <li class="nav-item mx-0 mx-lg-1">
        <a class="nav-link py-3 px-0 px-lg-3 rounded" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
